{
  "pluginAlias": "Neakasa",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "Neakasa"
      },
      "username": {
        "title": "Email/Username",
        "type": "string",
        "required": true,
        "placeholder": "your@email.com"
      },
      "password": {
        "title": "Password",
        "type": "string",
        "required": true
      },
      "pollInterval": {
        "title": "Poll Interval (seconds)",
        "type": "integer",
        "default": 60,
        "minimum": 30,
        "description": "How often to check for updates from the Neakasa cloud"
      },
      "deviceName": {
        "title": "Device Name",
        "type": "string",
        "default": "Neakasa M1",
        "description": "Display name for the device in HomeKit"
      },
      "debug": {
        "title": "Enable Debug Logging",
        "type": "boolean",
        "default": false
      },
      "showChildLock": {
        "title": "Child Lock Switch",
        "type": "boolean",
        "default": false
      },
      "showAutoBury": {
        "title": "Auto Bury Switch",
        "type": "boolean",
        "default": false
      },
      "showAutoLevel": {
        "title": "Auto Level Switch",
        "type": "boolean",
        "default": false
      },
      "showSilentMode": {
        "title": "Silent Mode Switch",
        "type": "boolean",
        "default": false
      },
      "showUnstoppableCycle": {
        "title": "Unstoppable Cycle Switch",
        "type": "boolean",
        "default": false
      },
      "showAutoRecovery": {
        "title": "Auto Recovery Switch",
        "type": "boolean",
        "default": false
      },
      "showYoungCatMode": {
        "title": "Young Cat Mode Switch",
        "type": "boolean",
        "default": false
      },
      "showBinStateSensor": {
        "title": "Bin State Sensor",
        "type": "boolean",
        "default": false,
        "description": "Leak sensor that alerts when waste bin is full or missing"
      },
      "showWifiSensor": {
        "title": "WiFi Signal Sensor",
        "type": "boolean",
        "default": false,
        "description": "Shows WiFi signal strength as a percentage"
      },
      "showCatSensors": {
        "title": "Cat Weight Sensors",
        "type": "boolean",
        "default": false,
        "description": "Per-cat weight sensors (one per registered cat)"
      }
    }
  },
  "layout": [
    {
      "type": "flex",
      "flex-flow": "row wrap",
      "items": [
        {
          "key": "username",
          "flex": "1 1 50%"
        },
        {
          "key": "password",
          "flex": "1 1 50%"
        }
      ]
    },
    {
      "type": "flex",
      "flex-flow": "row wrap",
      "items": [
        {
          "key": "deviceName",
          "flex": "1 1 50%"
        },
        {
          "key": "pollInterval",
          "flex": "1 1 50%"
        }
      ]
    },
    {
      "type": "fieldset",
      "title": "Optional Switches",
      "expandable": true,
      "items": [
        "showChildLock",
        "showAutoBury",
        "showAutoLevel",
        "showSilentMode",
        "showUnstoppableCycle",
        "showAutoRecovery",
        "showYoungCatMode"
      ]
    },
    {
      "type": "fieldset",
      "title": "Optional Sensors",
      "expandable": true,
      "items": [
        "showBinStateSensor",
        "showWifiSensor",
        "showCatSensors"
      ]
    },
    {
      "key": "debug"
    }
  ]
}
