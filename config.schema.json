{
  "pluginAlias": "Neakasa",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "required": ["name", "username", "password"],
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "default": "Neakasa"
      },
      "username": {
        "title": "Email/Username",
        "type": "string",
        "placeholder": "your@email.com"
      },
      "password": {
        "title": "Password",
        "type": "string"
      },
      "pollInterval": {
        "title": "Poll Interval (seconds)",
        "type": "integer",
        "default": 60,
        "minimum": 30,
        "description": "How often to check for updates from the Neakasa cloud"
      },
      "startupBehavior": {
        "title": "Startup Behavior",
        "type": "string",
        "default": "immediate",
        "enum": ["immediate", "skipInitialUpdate"],
        "description": "Control what happens after Homebridge starts: refresh right away, or wait for the first scheduled poll"
      },
      "startupDelaySeconds": {
        "title": "Startup Delay (seconds)",
        "type": "integer",
        "default": 0,
        "minimum": 0,
        "description": "Delay the initial refresh on startup (only used when Startup Behavior is immediate)"
      },
      "deviceName": {
        "title": "Device Name",
        "type": "string",
        "default": "Neakasa M1",
        "description": "Display name for the device in HomeKit"
      },
      "debug": {
        "title": "Enable Debug Logging",
        "type": "boolean",
        "default": false
      },
      "showChildLock": {
        "title": "Child Lock",
        "type": "boolean",
        "default": false,
        "description": "Prevents the device from being operated manually. Shows as a Lock in HomeKit."
      },
      "showAutoBury": {
        "title": "Auto Bury Switch",
        "type": "boolean",
        "default": false,
        "description": "Automatically covers waste after cat use"
      },
      "showAutoLevel": {
        "title": "Auto Level Switch",
        "type": "boolean",
        "default": false,
        "description": "Automatically levels the litter after cleaning"
      },
      "showSilentMode": {
        "title": "Silent Mode Switch",
        "type": "boolean",
        "default": false,
        "description": "Reduces motor noise during operation"
      },
      "showUnstoppableCycle": {
        "title": "Unstoppable Cycle Switch",
        "type": "boolean",
        "default": false,
        "description": "Cleaning cycle won't pause if interrupted"
      },
      "showAutoRecovery": {
        "title": "Auto Recovery Switch",
        "type": "boolean",
        "default": false,
        "description": "Automatically resumes after an interruption"
      },
      "showYoungCatMode": {
        "title": "Young Cat Mode Switch",
        "type": "boolean",
        "default": false,
        "description": "Adjusts timing for kittens and young cats"
      },
      "showBinStateSensor": {
        "title": "Bin State Sensor",
        "type": "boolean",
        "default": false,
        "description": "Alerts when waste bin is full or missing. Shows as a Leak Sensor in HomeKit."
      },
      "showWifiSensor": {
        "title": "WiFi Signal Sensor",
        "type": "boolean",
        "default": false,
        "description": "Shows device WiFi signal strength as a percentage. Shows as a Humidity Sensor in HomeKit."
      },
      "showCatSensors": {
        "title": "Cat Weight Sensors",
        "type": "boolean",
        "default": false,
        "description": "Tracks each cat's last recorded weight. Shows as a Humidity Sensor per cat in HomeKit."
      },
      "showSandLevelSensor": {
        "title": "Sand Level State Sensor",
        "type": "boolean",
        "default": false,
        "description": "Shows detailed sand level (Insufficient, Moderate, Sufficient, Overfilled). Shows as a Contact Sensor in HomeKit."
      },
      "showFaultSensor": {
        "title": "Fault / Jammed Alert Sensor",
        "type": "boolean",
        "default": false,
        "description": "Alerts when the device is stuck or has a fault (Panels Missing or Interrupted). Shows as a Motion Sensor in HomeKit â€” motion detected means a fault is active."
      },
      "useImperialUnits": {
        "title": "Use Imperial Units (lbs)",
        "type": "boolean",
        "default": false,
        "description": "Display cat weight in pounds instead of kilograms. Note: Weight is shown as a percentage (%) in HomeKit due to sensor limitations."
      },
      "deviceOverrides": {
        "title": "Per-Device Overrides",
        "type": "array",
        "default": [],
        "description": "Override polling interval, HomeKit name, hidden state, and feature flags for specific devices by iotId",
        "items": {
          "type": "object",
          "required": ["iotId"],
          "additionalProperties": false,
          "properties": {
            "iotId": {
              "title": "Device iotId",
              "type": "string",
              "description": "Exact Neakasa device iotId to override"
            },
            "name": {
              "title": "Name Override",
              "type": "string",
              "description": "Optional HomeKit display name override"
            },
            "hidden": {
              "title": "Hide Accessory",
              "type": "boolean",
              "default": false,
              "description": "Do not expose this device in HomeKit"
            },
            "pollInterval": {
              "title": "Poll Interval (seconds)",
              "type": "integer",
              "minimum": 30,
              "description": "Override poll interval for this device (min: 30)"
            },
            "showChildLock": {
              "title": "Child Lock",
              "type": "boolean"
            },
            "showAutoBury": {
              "title": "Auto Bury Switch",
              "type": "boolean"
            },
            "showAutoLevel": {
              "title": "Auto Level Switch",
              "type": "boolean"
            },
            "showSilentMode": {
              "title": "Silent Mode Switch",
              "type": "boolean"
            },
            "showUnstoppableCycle": {
              "title": "Unstoppable Cycle Switch",
              "type": "boolean"
            },
            "showAutoRecovery": {
              "title": "Auto Recovery Switch",
              "type": "boolean"
            },
            "showYoungCatMode": {
              "title": "Young Cat Mode Switch",
              "type": "boolean"
            },
            "showBinStateSensor": {
              "title": "Bin State Sensor",
              "type": "boolean"
            },
            "showWifiSensor": {
              "title": "WiFi Signal Sensor",
              "type": "boolean"
            },
            "showCatSensors": {
              "title": "Cat Weight Sensors",
              "type": "boolean"
            },
            "showSandLevelSensor": {
              "title": "Sand Level Sensor",
              "type": "boolean"
            },
            "showFaultSensor": {
              "title": "Fault Sensor",
              "type": "boolean"
            },
            "useImperialUnits": {
              "title": "Use Imperial Units (lbs)",
              "type": "boolean"
            },
            "features": {
              "title": "Feature Overrides",
              "type": "object",
              "additionalProperties": false,
              "description": "Set true/false to enable or disable individual optional features for this device",
              "properties": {
                "showChildLock": {
                  "title": "Child Lock",
                  "type": "boolean"
                },
                "showAutoBury": {
                  "title": "Auto Bury Switch",
                  "type": "boolean"
                },
                "showAutoLevel": {
                  "title": "Auto Level Switch",
                  "type": "boolean"
                },
                "showSilentMode": {
                  "title": "Silent Mode Switch",
                  "type": "boolean"
                },
                "showUnstoppableCycle": {
                  "title": "Unstoppable Cycle Switch",
                  "type": "boolean"
                },
                "showAutoRecovery": {
                  "title": "Auto Recovery Switch",
                  "type": "boolean"
                },
                "showYoungCatMode": {
                  "title": "Young Cat Mode Switch",
                  "type": "boolean"
                },
                "showBinStateSensor": {
                  "title": "Bin State Sensor",
                  "type": "boolean"
                },
                "showWifiSensor": {
                  "title": "WiFi Signal Sensor",
                  "type": "boolean"
                },
                "showCatSensors": {
                  "title": "Cat Weight Sensors",
                  "type": "boolean"
                },
                "showSandLevelSensor": {
                  "title": "Sand Level Sensor",
                  "type": "boolean"
                },
                "showFaultSensor": {
                  "title": "Fault Sensor",
                  "type": "boolean"
                },
                "useImperialUnits": {
                  "title": "Use Imperial Units (lbs)",
                  "type": "boolean"
                }
              }
            }
          }
        }
      }
    }
  },
  "layout": [
    {
      "type": "flex",
      "flex-flow": "row wrap",
      "items": [
        {
          "key": "username",
          "flex": "1 1 50%"
        },
        {
          "key": "password",
          "flex": "1 1 50%"
        }
      ]
    },
    {
      "type": "flex",
      "flex-flow": "row wrap",
      "items": [
        {
          "key": "deviceName",
          "flex": "1 1 50%"
        },
        {
          "key": "startupBehavior",
          "flex": "1 1 50%"
        },
        {
          "key": "pollInterval",
          "flex": "1 1 50%"
        },
        {
          "key": "startupDelaySeconds",
          "flex": "1 1 50%"
        }
      ]
    },
    {
      "type": "fieldset",
      "title": "Display Preferences",
      "items": [
        "useImperialUnits"
      ]
    },
    {
      "type": "fieldset",
      "title": "Optional Switches",
      "expandable": true,
      "items": [
        "showChildLock",
        "showAutoBury",
        "showAutoLevel",
        "showSilentMode",
        "showUnstoppableCycle",
        "showAutoRecovery",
        "showYoungCatMode"
      ]
    },
    {
      "type": "fieldset",
      "title": "Optional Sensors",
      "expandable": true,
      "items": [
        "showBinStateSensor",
        "showWifiSensor",
        "showCatSensors",
        "showSandLevelSensor",
        "showFaultSensor"
      ]
    },
    {
      "type": "fieldset",
      "title": "Per-Device Overrides",
      "expandable": true,
      "items": [
        {
          "key": "deviceOverrides",
          "type": "array",
          "items": [
            "deviceOverrides[].iotId",
            "deviceOverrides[].name",
            "deviceOverrides[].hidden",
            "deviceOverrides[].pollInterval",
            {
              "type": "fieldset",
              "title": "Feature Overrides",
              "expandable": true,
              "items": [
                "deviceOverrides[].showChildLock",
                "deviceOverrides[].showAutoBury",
                "deviceOverrides[].showAutoLevel",
                "deviceOverrides[].showSilentMode",
                "deviceOverrides[].showUnstoppableCycle",
                "deviceOverrides[].showAutoRecovery",
                "deviceOverrides[].showYoungCatMode",
                "deviceOverrides[].showBinStateSensor",
                "deviceOverrides[].showWifiSensor",
                "deviceOverrides[].showCatSensors",
                "deviceOverrides[].showSandLevelSensor",
                "deviceOverrides[].showFaultSensor",
                "deviceOverrides[].useImperialUnits"
              ]
            }
          ]
        }
      ]
    },
    {
      "key": "debug"
    }
  ]
}
